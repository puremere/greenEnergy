
@model greenEnergy.ViewModel.pageContentVM

<section class="hero-slider-wrap hero-style-1">
    <div class="swiper-container hero-slide-container">

        

        <div class="swiper-wrapper">

            @foreach (var item in @Model.contentChild)
            {
                string baseImage = "/Images/" + @System.Configuration.ConfigurationManager.AppSettings["name"] + "/Uploads/";
                string image = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "image").title2) ? "/webAssets/green/assets/imgs/hero-3.jpg" : baseImage + item.dataList.SingleOrDefault(x => x.title == "image").title2;
                string title = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "title").title2) ? "slider title" : item.dataList.SingleOrDefault(x => x.title == "title").title2;
                string description = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "description").title2) ? "slider Description" : item.dataList.SingleOrDefault(x => x.title == "description").title2;
                string buttonURL = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "buttonURL").title2) ? "#" : item.dataList.SingleOrDefault(x => x.title == "buttonURL").title2;
                string buttonText = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "buttonText").title2) ? "View More" : item.dataList.SingleOrDefault(x => x.title == "buttonText").title2;

                string navText1 = string.IsNullOrEmpty(item.dataList.SingleOrDefault(x => x.title == "navText1").title2) ? "navText1" : item.dataList.SingleOrDefault(x => x.title == "navText1").title2;
                string navText2 = string.IsNullOrEmpty( item.dataList.SingleOrDefault(x => x.title == "navText2").title2 ) ? "navText2" : item.dataList.SingleOrDefault(x => x.title == "navText2").title2;



                int index = @Model.contentChild.IndexOf(item);
                <div id="@title" class="swiper-slide slide-bg-image">
                    <div class="slide-inner" style="background-image : url(@image)">
                        <div class="hero-slide-content-wrap">
                            <div class="hero-slide-content">
                                <!--                                    <h4 class="slide-subtitle">-->
                                <!--                                        Green Energy-->
                                <!--                                    </h4>-->
                                <h1 class="slide-title">
                                    @title
                                </h1>
                                <p class="slide-content">
                                    @description
                                </p>
                                <div class="btn-box">
                                    <a href="@buttonURL" class="theme-btn">
                                        <span></span>
                                        @buttonText
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end slide-inner -->
                </div>
                <script>

                          $(document).ready(function () {
                          setSlidePagination('@index','@navText2','@navText1')
                          })
                </script>

            }


            <!-- end swiper-slide -->
        </div>
        <!-- end swiper-wrapper -->
    </div>
    <div class="hero-slider-thumbnail">

    </div>
</section>
<script>
                        var setSlidePagination = function(index,title,description) {
                            var spanclass = "thumb-content >span."+index;
                            var h1class = "thumb-content >h1."+index;

                            $("."+spanclass).text(description);
                            $("."+h1class).text(title);
                        }
</script>