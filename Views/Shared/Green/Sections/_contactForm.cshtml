


@model greenEnergy.ViewModel.pageContentVM

@{
    string baseImage = "/Images/" + @System.Configuration.ConfigurationManager.AppSettings["name"] + "/Uploads";
    string heading = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "heading").title2) ? "Submit Your Questions" : Model.dataList.SingleOrDefault(x => x.title == "heading").title2;
    string title = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "title").title2) ? "contact" : Model.dataList.SingleOrDefault(x => x.title == "title").title2;
    string category = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "category").title2) ? "contact" : Model.dataList.SingleOrDefault(x => x.title == "category").title2;
    string image = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "image").title2) ? "/webAssets/green/assets/imgs/contact.jpg" : baseImage + Model.dataList.SingleOrDefault(x => x.title == "image").title2;

}


<section class="contact2-area">
    <div class="custom-row">
        <div class="img-box">
            <img src="@image" alt="contact" />
        </div>

        <div class="right">
            <div class="content">
                <h4 class="subtitle">
                    <img src="/webAssets/green/assets/imgs/star-shape.svg" alt="shape">
                    @heading
                    <img src="/webAssets/green/assets/imgs/star-shape.svg" alt="shape">
                </h4>
                <h1 class="title">@title</h1>

                <form id="ajax-form" action="https://wpriverthemes.com/HTML/magnuz/assets/mail/contact2.php" method="POST" class="contact-form">
                    <input hidden name="category" value="@category"/>
                    <div class="input-group">
                        <input type="text" name="fullname" placeholder="Full Name*">
                    </div>
                    <div class="input-group">
                        <input type="email" name="email" placeholder="Email Address*">
                    </div>
                    <div class="input-group">
                        <textarea name="message" placeholder="Type your Message here*"></textarea>
                    </div>
                    <div class="input-group">
                        <button class="theme-btn" type="submit">
                            <span></span>
                            Submit
                        </button>
                    </div>
                    <p class="text-base text-gray-400" id="result"></p>
                </form>
            </div>
        </div>
    </div>
</section>
