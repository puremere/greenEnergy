@model greenEnergy.ViewModel.pageContentVM
@using Newtonsoft.Json;
@using greenEnergy.ViewModel;
@{


    string header = Model.dataList.SingleOrDefault(x => x.title == "header") == null ? "عنوان قسمت مورد نظر وارد می شود" : Model.dataList.SingleOrDefault(x => x.title == "header").title2;
    string baseImage = "/Images/" + @System.Configuration.ConfigurationManager.AppSettings["name"] + "/Uploads/";
    string image1 = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "img_image1").title2) ? "/webAssets/green2/img/11.jpg" : baseImage + Model.dataList.SingleOrDefault(x => x.title.Contains("img_image1")).title2;
    string html_title1 = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "title1").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "title1").title2;
    string html_description1 = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "description1").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "description1").title2;
    string url1 = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "url1").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "url1").title2;


}
<section class="cta-seven" style="margin:50px 0">
    <div class="container">
        <div class="cta-seven__inner">
            <div class="row d-flex align-items-center">
                <div class="col-lg-4">
                    <img style="border-radius:35px" src="@image1" alt="insur">
                </div>
                <div class="col-lg-5">
                    <div class="cta-seven__content">
                        <h5 class="cta-seven__sub-title">@html_title1</h5>
                        <h3 class="cta-seven__title">@html_description1</h3>
                    </div>
                </div>
                <div class="col-lg-3">
                    <a href="@url1" class="thm-btn thm-btn--eight">جزئیات بیشتر</a>
                </div>
            </div>
        </div>
    </div>
</section>
