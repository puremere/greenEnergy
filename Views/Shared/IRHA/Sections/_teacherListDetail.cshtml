
@model greenEnergy.ViewModel.pageContentVM
@using Newtonsoft.Json;
@using greenEnergy.ViewModel;
@{


    string baseImage = "/Images/" + @System.Configuration.ConfigurationManager.AppSettings["name"] + "/Uploads/";
    string image = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "image").title2) ? "/webAssets/green2/img/11.jpg" : baseImage + Model.dataList.SingleOrDefault(x => x.title.Contains("image")).title2;
    string html_title = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "title").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "title").title2;
    string html_description = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "description").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "description").title2;
    string type = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "type").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "type").title2;
    string url = string.IsNullOrEmpty(Model.dataList.SingleOrDefault(x => x.title == "url").title2) ? "slider title" : Model.dataList.SingleOrDefault(x => x.title == "url").title2;

}



<div class="item">
    <div class="testimonial-one__single">
        <div class="testimonial-one__single-inner">
            <div class="testimonial-one__shape-1">
                <img src="assets/images/shapes/testimonial-one-shape-1.png" alt="">
            </div>
            <div class="testimonial-one__client-info">
                <div class="testimonial-one__client-img-box">
                    <img src="@image" alt="">
                    <div class="testimonial-one__quote">
                        <img src="assets/images/testimonial/testimonial-1-quote.png" alt="">
                    </div>
                </div>
                <div class="testimonial-one__client-content">

                    <div class="testimonial-one__client-details">
                        <h3 class="testimonial-one__client-name">@html_title</h3>
                        <p class="testimonial-one__client-sub-title">@type</p>
                    </div>
                </div>
            </div>
            <p class="testimonial-one__text">
                @html_description
            </p>
        </div>
    </div>
</div>