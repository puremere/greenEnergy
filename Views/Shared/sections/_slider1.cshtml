                                <div class="btn-box">
                                    <a href="#" class="theme-btn">
                                        <span></span>
                                        EXPLORE
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end slide-inner -->
                </div>
                <!-- end swiper-slide -->
            </div>
            <!-- end swiper-wrapper -->
        </div>
