
  @model greenEnergy.ViewModel.sectionParent

    <section class="hero-slider-wrap hero-style-1">
        <div class="swiper-container hero-slide-container">
            <div class="swiper-wrapper">

                @foreach (var item in @Model.dataList)
                {

                    <div id="@item.title" class="swiper-slide slide-bg-image">
                        <div class="slide-inner">
                            <div class="hero-slide-content-wrap">
                                <div class="hero-slide-content">
                                    <!--                                    <h4 class="slide-subtitle">-->
                                    <!--                                        Green Energy-->
                                    <!--                                    </h4>-->
                                    <h1 class="slide-title">
                                        @item.title
                                    </h1>
                                    <p class="slide-content">
                                        @item.description
                                    </p>
                                    <div class="btn-box">
                                        <a href="#" class="theme-btn">
                                            <span></span>
                                            EXPLORE
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end slide-inner -->
                    </div>
                    <script>
                        $(document).ready(function () {
                            document.getElementById('hero').style = 'font-size: 12rem;';
