                                                                        <div class="card htmlcard">
                                                                            <div class="card-img">
                                                                                <img src="~/Images/@System.Configuration.ConfigurationManager.AppSettings["name"]/Uploads/@item.image" class="img-fluid">
                                                                            </div>
