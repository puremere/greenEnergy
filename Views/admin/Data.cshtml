    <script>
        var placeToGo;
       $(".card-img-left").click(function ()
         {
           placeToGo = $(this).attr("classToFit");
           $(".imageCollection").show();
         });
        $(".bigone").click(function(){
           $("."+placeToGo).val($(this).attr("nameToGo"));
