                                                                        <input checked style="flex:1;  margin:0 10px" type="checkbox" id="editTitle2" name="title2" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <input style="flex:1;  margin:0 10px" type="checkbox" id="editTitle2" name="title2" />
                                                                    }
                                                                }
                                                                else
