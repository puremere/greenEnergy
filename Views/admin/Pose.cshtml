                                                                    <input style="flex:1;  margin:0 10px" type="checkbox" id="editTitle2" name="title2" />
                                                                }

                                                                <button class="btn ripple btn-primary" type="submit">Verify</button>


                                                            </form>
                                                        </div>
                                                    }


                                                </div>



                                            </td>


                                            <td>
