
@model greenEnergy.ViewModel.contentListVM
@{
    ViewBag.Title = "Content";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<style>
    .show {
        display: inline-block;
        visibility: visible
    }

    .hide {
        display: none;
        visibility: hidden
    }

    .editMode {
        display: none;
        visibility: hidden
